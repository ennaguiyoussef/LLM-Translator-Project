{
  "manifest_version": 3,
  "name": "Darija Side Panel Translator",
  "version": "1.0.0",
  "description": "Traducteur Darija en panneau lateral avec auto-detection de selection.",
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Ouvrir le panneau"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}